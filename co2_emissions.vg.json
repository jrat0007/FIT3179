{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Air transport CO₂ emissions with zoomable Y-axis",
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jrat0007/FIT3179/refs/heads/main/air_transport_co2_emisssions.csv"
            },
            "transform": [
                {
                    "filter": "datum.Country != null && datum.Country != '' && (datum.Country == 'United States' || datum.Country == 'United Kingdom' || datum.Country == 'Australia' || datum.Country == 'Germany' || datum.Country == 'Japan' || datum.Country == 'France' || datum.Country == 'Turkey' || datum.Country == 'Korea' || datum.Country == 'Ireland' || datum.Country == 'Canada')"
                }
            ],
            "params": [
                {
                    "name": "countryHighlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "Country"
                        ]
                    },
                    "bind": "legend"
                },
                {
                    "name": "yZoom",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "y"
                        ]
                    }
                }
            ],
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "temporal",
                    "title": "Year",
                    "axis": {
                        "format": "%Y",
                        "tickCount": "year"
                    }
                },
                "y": {
                    "field": "Air transport CO2 emissions",
                    "type": "quantitative",
                    "title": "CO₂ Emissions (tonnes)",
                    "scale": {
                        "domain": {
                            "param": "yZoom"
                        }
                    }
                },
                "color": {
                    "field": "Country",
                    "type": "nominal",
                    "title": "Country",
                    "legend": {
                        "orient": "right",
                        "columns": 1,
                        "symbolLimit": 100
                    }
                },
                "opacity": {
                    "condition": {
                        "param": "countryHighlight",
                        "value": 1
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Year",
                        "type": "temporal",
                        "title": "Year"
                    },
                    {
                        "field": "Air transport CO2 emissions",
                        "type": "quantitative",
                        "title": "CO₂ Emissions (t)"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "year": "2020-01-01"
                    }
                ]
            },
            "mark": {
                "type": "rule",
                "color": "red",
                "strokeDash": [
                    5,
                    5
                ],
                "strokeWidth": 2
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal"
                }
            }
        },
        {
            "data": {
                "values": [
                    {
                        "year": "2020-01-01",
                        "label": "COVID-19 impact"
                    }
                ]
            },
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "top",
                "dx": 5,
                "dy": -500,
                "fontSize": 14,
                "fontWeight": "bold",
                "color": "red"
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal"
                },
                "y": {
                    "datum": 0
                },
                "text": {
                    "field": "label"
                }
            }
        }
    ],
    "width": 900,
    "height": 600
}
